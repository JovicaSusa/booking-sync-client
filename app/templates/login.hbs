<form>
  <div class='form-group'>
    <label>Username</label>
    {{input
      data-test-login-username
      value=(mut model.username)
      class='form-control'}}
  </div>
  <div class='form-group'>
    <label>Password</label>
    {{input
      data-test-login-password
      type='password'
      value=(mut model.password)
      class='form-control'}}
  </div>

  <div class='text-center'>
    <button data-test-login-button class='btn btn-primary' {{action 'login' model}}>
      Sign up
    </button>
  </div>
</form>
