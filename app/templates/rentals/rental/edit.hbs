<div class='row text-center'>
  <h2>Edit {{model.name}}</h2>
</div>

<div class='col-sm-4 col-sm-offset-4'>
  <form>
    <div class='form-group'>
      <label>Name</label>
      {{input
        data-test-rental-name
        value=(mut model.name)
        class='form-control'}}
    </div>
    <div class='form-group'>
      <label>Daily Rate</label>
      {{input
        data-test-rental-daily-rate
        type='number'
        value=(mut model.dailyRate)
        class='form-control'}}
    </div>

    <div class='text-center'>
      <button data-test-edit-rental-button class='btn btn-primary' {{action 'save' model}}>
        Edit Rental
      </button>
    </div>
  </form>
</div>
