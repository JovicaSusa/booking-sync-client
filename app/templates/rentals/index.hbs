<div class='row text-center'>
  <h2>Rentals</h2>
</div>
<div class='col-sm-10 col-sm-offset-1'>
  <div class='row'>
  {{#each model as |rental|}}
    <div class='col-sm-4'>
      <div class='row'>
        <div class='col-sm-6'>
          <h3>{{rental.name}}</h3>
          <p><strong>Daily Rate:</strong> {{rental.dailyRate}}</p>
        </div>
        <div class='col-sm-6 margin-5'>
          {{link-to 'Book' 'rentals.rental.book' rental.id class='btn btn-primary center-v'}}
        </div>
      </div>
    </div>
  {{/each}}
</div>
</div>
